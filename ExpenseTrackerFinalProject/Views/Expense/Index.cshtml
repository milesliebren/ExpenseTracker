@model IEnumerable<ExpenseTracker.Models.Expense>

@{
    ViewData["Title"] = "Expenses";  // Title for the page
}

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Description</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Expense", new { id = expense.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", "Expense", new { id = expense.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No expenses found.</p>
}

<div>
    <a href="@Url.Action("Create", "Expense")" class="btn btn-success">Add New Expense</a>
</div>
